<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      Josh.care{{#if title}} | {{title}}{{/if}}
    </title>
    <!-- Meta -->
    <link rel="icon" type="image/png" href="/images/jdc_favicon.png" sizes="32x32" />
    <!-- Fonts + Styles -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:700,900|Rubik" rel="stylesheet">
    <link href="/fonts/entypo.min.css" rel="stylesheet" />
    <link href="/styles/bundle.min.css" rel="stylesheet" />
  </head>
  <body class="theme-default{{#if bodyClass}} page-{{bodyClass}}{{/if}}">

    {{#if isAdmin}}
      {{> nav_admin}}
    {{else}}
      {{> nav}}
    {{/if}}

    <div class="default-alert">
      <div class="jdc-alert">
        <div class="block-full__wrapper">
          <span class="jdc-alert__icon icon-emoji-happy"></span>
          <div class="jdc-alert__text"></div>
        </div>
      </div>
    </div>

    <div class="default-error">
      <div class="jdc-error">
        <div class="block-full__wrapper">
          <span class="jdc-error__icon icon-emoji-sad"></span>
          <div class="jdc-error__text"></div>
        </div>
      </div>
    </div>
